<%- if @address4 -%>
  <%= @name %>-ipv4 {
    address <%= @address4 %>; 
    port <%= @port %>;
    <%- if @_tsig_name and @_tsig_name != 'NOKEY' -%>
    key <%= @_tsig_name %>;
    <%- end -%>
  }
  <%= @name %>-ipv4-notify {
    address <%= @address4 %>; 
    port <%= @port %>;
  }
<%- end -%>
